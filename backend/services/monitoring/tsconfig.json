{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",            // <-- change this
    "outDir": "./dist",
    "rootDir": "../../",             // keep as needed
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
